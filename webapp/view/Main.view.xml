<mvc:View
	controllerName="com.palimedia.app.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/palimedia/app/model/formatter'
	}">

	<List
		id="ProductList"
		items="{products>/data}">
		<StandardListItem
			title="{products>name}"
			/>
	</List>

</mvc:View>
